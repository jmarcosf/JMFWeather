<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/IDR_LAY_CITY_SEARCH"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center" >

	<!--**********************************************************/
    /*                                                           */ 
    /* Found Cities ListView                                     */ 
	/*                                                           */ 
    /***********************************************************-->
   	<ListView 
	    android:id="@+id/IDC_LV_SEARCH_CITY_LIST"
	    style="@style/IDR_STY_CITY_LISTVIEW_ITEM_STYLE" 
	    android:layout_width="400dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal" />

   	<!--**********************************************************/
    /*                                                           */ 
    /* Progress Bar Layout                                       */ 
	/*                                                           */ 
    /***********************************************************-->
   	<ProgressBar
	    android:id="@+id/IDC_PB_WAIT_CLOCK"
	    android:layout_width="48dp"
	    android:layout_height="48dp"
	    android:layout_gravity="center"
	    android:visibility="gone" />

	<!--******************************************************/
    /*                                                       */ 
    /* Error Message Layout                                  */ 
	/*                                                       */ 
    /*******************************************************-->
	<include layout="@layout/layout_error_message" />
   		
</FrameLayout>
