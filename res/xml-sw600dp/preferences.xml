<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

	<!--**********************************************************/
	/*                                                           */ 
	/* Include Current Location on Startup                       */ 
	/*                                                           */ 
	/***********************************************************-->
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="IncludeCurrentLocationOnStartup"
        android:title="@string/IDS_PREF_TITLE_INCLUDE_CURRENT_LOCATION_ON_STARTUP"
        android:summary="@string/IDS_PREF_DESC_INCLUDE_CURRENT_LOCATION_ON_STARTUP" />
    
	<!--**********************************************************/
	/*                                                           */ 
	/* Divide Screen on Tablets                                  */ 
	/*                                                           */ 
	/***********************************************************-->
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="DivideScreenOnTablets"
        android:title="@string/IDS_PREF_TITLE_DIVIDE_SCREEN_ON_TABLETS"
        android:summary="@string/IDS_PREF_DESC_DIVIDE_SCREEN_ON_TABLETS" />
    
    	<!--**********************************************************/
	/*                                                           */ 
	/* City Weather Synchronization Frequency                    */ 
	/*                                                           */ 
	/***********************************************************-->
    <ListPreference
        android:defaultValue="@integer/g_WeatherSyncFrequencyDefault"
        android:key="WeatherSyncFrequency"
        android:title="@string/IDS_PREF_TITLE_SYNC_FREQUENCY"
        android:entries="@array/IDS_ARRAY_SYNC_FREQUENCY_TITLES"
        android:entryValues="@array/IDS_ARRAY_SYNC_FREQUENCY_VALUES"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />
    
	<!--**********************************************************/
	/*                                                           */ 
	/* Degress Type                                              */ 
	/*                                                           */ 
	/***********************************************************-->
    <ListPreference
        android:defaultValue="@integer/g_WeatherDegreesTypeDefault"
        android:key="WeatherDegreesType"
        android:title="@string/IDS_PREF_TITLE_DEGREES_TYPE"
        android:entries="@array/IDS_ARRAY_DEGREES_TYPE_TITLES"
        android:entryValues="@array/IDS_ARRAY_DEGREES_TYPE_VALUES"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />
    
</PreferenceScreen>

















